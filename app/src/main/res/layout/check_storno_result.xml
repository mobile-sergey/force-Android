<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="club.plus1.forcetaxi.viewmodel.CheckViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:onClick="@{() -> viewModel.onResult(context)}"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/textUserInfo"
            style="@style/AppTheme.ForceTaxi.Text"
            android:text="@string/text_check_cancelled" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="2"
            android:background="@color/colorAccent"
            android:orientation="vertical"
            tools:ignore="InefficientWeight">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@android:color/darker_gray"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textNumber"
                    style="@style/AppTheme.ForceTaxi.Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:text="@string/check_number"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textCheck"
                    style="@style/AppTheme.ForceTaxi.Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/check_text"
                    android:textAlignment="viewStart" />

                <TextView
                    android:id="@+id/textUrl"
                    style="@style/AppTheme.ForceTaxi.Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:text="@string/check_url"
                    android:textAlignment="center" />

                <ImageView
                    android:id="@+id/imageQR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/qr"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>